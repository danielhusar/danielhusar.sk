{
  "name": "danielhusar.sk",
  "description": "My personal site and blog",
  "version": "1.0.0",
  "author": "Daniel Husar <dano.husar@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn build-post && NODE_ENV=production gatsby build",
    "build-post": "babel --presets @babel/preset-typescript ./src/templates/post.tsx --out-file ./src/templates/post.js",
    "start": "yarn build-post && gatsby develop --port 4000",
    "test": "yarn type-check && yarn build",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "deploy": "gatsby build --prefix-paths && gh-pages -d public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/danielhusar/danielhusar.sk"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js,json,md,mdx,ts,tsx}": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "dependencies": {
    "@babel/cli": "^7.1.2",
    "@mdx-js/mdx": "^0.15.4",
    "@mdx-js/tag": "^0.15.0",
    "@types/react-helmet": "^5.0.7",
    "@types/styled-components": "^4.0.1",
    "babel-plugin-styled-components": "^1.7.1",
    "gatsby": "^2.0.0",
    "gatsby-image": "^2.0.8",
    "gatsby-mdx": "^0.1.4",
    "gatsby-plugin-catch-links": "^2.0.3",
    "gatsby-plugin-favicon": "^3.1.4",
    "gatsby-plugin-feed": "^2.0.8",
    "gatsby-plugin-google-analytics": "^2.0.6",
    "gatsby-plugin-offline": "^2.0.5",
    "gatsby-plugin-react-helmet": "^3.0.0",
    "gatsby-plugin-sharp": "^2.0.5",
    "gatsby-plugin-styled-components": "^3.0.0",
    "gatsby-plugin-typescript": "^2.0.0",
    "gatsby-remark-images": "^2.0.4",
    "gatsby-source-filesystem": "^2.0.1",
    "gatsby-transformer-remark": "^2.1.4",
    "gatsby-transformer-sharp": "^2.1.1",
    "gh-pages": "^2.0.0",
    "husky": "1.0.0-rc.13",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.2",
    "prismjs": "^1.15.0",
    "react": "^16.5.1",
    "react-dom": "^16.5.1",
    "react-helmet": "^5.2.0",
    "react-live": "^1.12.0",
    "react-prism": "^4.3.2",
    "react-social-icons": "^3.0.0",
    "react-styled-flexboxgrid": "^2.6.0",
    "styled-components": "^4.0.0-beta.7-hoist",
    "ts-optchain": "^0.1.1",
    "typescript": "^3.0.3"
  }
}
